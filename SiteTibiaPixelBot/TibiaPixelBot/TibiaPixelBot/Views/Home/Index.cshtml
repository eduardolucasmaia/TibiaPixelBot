<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <h2 class="text-center text-uppercase text-secondary mb-0">Contact Me</h2>
        <hr class="star-dark mb-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <form asp-controller="Home" asp-action="Index" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" novalidate="novalidate">
                    @Html.AntiForgeryToken()

                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Name</label>
                            <input asp-for="Name" placeholder="Name" required="required" type="text" class="form-control" data-validation-required-message="Please enter your name." />
                            @*<span asp-validation-for="Name" class="help-block text-danger"></span>*@
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Email Address</label>
                            <input asp-for="Email" type="email" placeholder="Email Address" required="required" class="form-control" data-validation-required-message="Please enter your email address.">
                            @*<span asp-validation-for="Email" class="help-block text-danger"></span>*@
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Message</label>
                            <textarea asp-for="Message" class="form-control" irows="5" placeholder="Message" required="required" data-validation-required-message="Please enter a message."></textarea>
                            @*<span asp-validation-for="Message" class="help-block text-danger"></span>*@
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-xl" id="sendMessageButton">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

